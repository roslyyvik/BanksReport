<% layout('layouts/boilerplate') -%>

<div class="" style="min-height:100%">
<div class="container bg-light col-sm-6 shadow-sm py-5 my-5">
  <div class="col-10 container">
    <form action="/forgot-password?_method=PUT" method="POST">
      <div class="form-group text-primary" style="text-align:center">
        <h2>Скинути Пароль</h2>
      </div>
      <div class="form-group">
        <label for="email"></label>
        <input type="email" class="form-control py-4" name="email" id="email" placeholder="Електронна пошта" autofocus>
      </div>
      <div>
        <input type="submit" class="form-control btn btn-primary shadow-sm mt-3 pm-4" value="Скинути пароль">
      </div>
    </form>
  </div>
</div>
</div>
